@model IndexViewModel

@foreach (var item in Model.GymClasses)
{
    <tr>
        <td>
            @if (User.IsInRole("Member"))
            {
                <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
            }
            else
            {
                @Html.DisplayFor(modelItem => item.Name)
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        @if (User.IsInRole("Member"))
        {
            <td>
                <a asp-action="BookingToggle" asp-route-id="@item.Id"
                   class="btn @(item.Attending ? "btn-danger" : "btn-success")">
                    @(item.Attending ? "cancel" : "book")
                </a> |

                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        }
    </tr>
}